<resources>

    <style name="Base.Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!--(Тулбар,текст(и хз что еще)-->
        <item name="colorPrimary">@color/material_blue_gray_700</item>
        <!--(статусбар)-->
        <item name="colorPrimaryDark">@android:color/black</item>
        <!--(индикаторы нажатий(если незадано иначе), цвет ссылок,дефолтный цвет прогрессбара)-->
        <item name="colorAccent">@color/material_indigo_500</item>
        <item name="android:textColor">@color/material_blue_gray_700</item>
        <!--(цвет стандарного текста левого/правого меню,цает верхнего тулбара)-->
        <item name="android:textColorPrimary">@color/material_blue_gray_50</item>
        <!--(не ясно за что отвечает)-->
        <item name="android:textColorPrimaryInverse">@color/material_green_500</item>
        <!--(иконки в левом меню)-->
        <item name="android:textColorSecondary">@color/material_blue_gray_700</item>
        <!--overflow menu items-->
        <item name="android:itemTextAppearance">@style/popupTextAppearanceLight</item>
        <!--(гамбургер,триточки(overflow),не нажатый чекбокс)-->
        <item name="colorControlNormal">@color/material_blue_gray_50</item>
        <item name="android:windowBackground">@color/material_blue_gray_50</item>
        <item name="windowbackgroundOverrided">@color/material_blue_gray_50</item>
        <item name="windowBackgroundDark">@color/my_material_grey_300</item>
        <item name="windowBackgroundHalfTransparent">@color/material_blue_gray_50_half_transparent</item>
        <item name="quoteBackgroundColor">@color/quote_bg_color_light</item>
        <item name="artListCardBackgroundColor">@color/my_material_grey_300</item>

        <item name="popupMenuStyle">@style/popupLight</item>
        <item name="dropDownListViewStyle">@style/OwerFlowMenuBackgroundLight</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popupLight</item>
        <item name="readTextColor">@color/material_grey_400</item>
        <!--navigationView-->
        <item name="navigation_view_style">@style/navigationStyleLight</item>
        <item name="navigationViewItemTextColor">@color/navigation_item_text_selector_light</item>
        <item name="navigationViewItemIconColor">@color/navigation_item_text_selector_light</item>
        <!---->
        <item name="colorFAB">@color/zbs_color_red</item>
        <item name="newArticlesTextColor">@color/zbs_color_red</item>
        <item name="toolbarBackgroundGradient">@drawable/gradient_light</item>
        <item name="favoriteIcon">@drawable/ic_favorite_black_24dp</item>
        <item name="favoriteIconUnselected">@drawable/ic_favorite_border_black_24dp</item>
        <item name="readIcon">@drawable/ic_email_black_24dp</item>
        <item name="readIconUnselected">@drawable/ic_drafts_black_24dp</item>
        <item name="spoilerColorTitle">@color/material_red_800</item>

        <item name="snackbarActionTextColor">@color/material_green_500</item>
        <!--icons-->
        <!--<item name="iconShare">@drawable/ic_share_black</item>-->
        <!--<item name="iconTextSizeDialog">@drawable/ic_text_fields_black_24dp</item>-->
        <item name="iconArrowUp">@drawable/ic_keyboard_arrow_up_black_24dp</item>
        <item name="iconArrowDown">@drawable/ic_keyboard_arrow_down_black_24dp</item>

        <!--same but in different color-->
        <item name="iconArrowUpThemed">@drawable/ic_keyboard_arrow_up_black_24dp</item>
        <item name="iconArrowDownThemed">@drawable/ic_keyboard_arrow_down_black_24dp</item>

        <!---->
        <item name="iconAdsSettings24dp">@drawable/ic_offline_pin_black_24dp</item>
        <item name="iconVideo24dp">@drawable/ic_video_library_black_24dp</item>

        <item name="iconOfflineAdd">@drawable/ic_download_black_24dp</item>
        <item name="iconOfflineRemove">@drawable/ic_save_black_24dp</item>
        <item name="iconDelete">@drawable/ic_delete_black_24dp</item>
        <item name="iconEmptyImage">@drawable/ic_image_black_48dp</item>
        <item name="loadingIndicator">@drawable/ic_autorenew_black_48dp</item>
        <item name="scrollbar">@drawable/scrollbar_light</item>
        <!--стили для библиотеки диалогов-->
        <item name="md_dark_theme">false</item>
        <item name="md_positive_color">@color/zbs_color_red</item>
        <item name="md_neutral_color">@color/zbs_color_red</item>
        <item name="md_negative_color">@color/zbs_color_red</item>
        <!--<item name="md_btn_ripple_color">@color/zbs_color_red</item>-->
        <item name="md_widget_color">@color/zbs_color_red</item>
    </style>

    <style name="SCP.Theme.Light" parent="Base.Theme.Light">
        <!--nothing to extend-->
    </style>

